# Mandari - Environment Configuration
# Copy this file to .env and adjust values

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/mandari

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Search
# =============================================================================
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_KEY=masterKey

# =============================================================================
# Security
# =============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=change-me-in-production-with-a-real-secret-key

# =============================================================================
# Application
# =============================================================================
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# CORS (comma-separated list of allowed origins)
# =============================================================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001

# =============================================================================
# AI Services (optional)
# =============================================================================
GROQ_API_KEY=
OPENAI_API_KEY=

# =============================================================================
# OParl Ingestor Settings
# =============================================================================
OPARL_REQUEST_TIMEOUT=300
OPARL_MAX_RETRIES=5
OPARL_WAIT_TIME=0.2

# =============================================================================
# File Storage
# =============================================================================
FILE_STORAGE_PATH=./data/files
DOWNLOAD_FILES=true

# =============================================================================
# Email / SMTP Settings (can also be configured in Admin)
# =============================================================================
# Leave empty to use console backend in development
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=true
EMAIL_USE_SSL=false
DEFAULT_FROM_EMAIL=noreply@mandari.de

# =============================================================================
# Work Module Encryption
# =============================================================================
# Generate with: python -c "import secrets; import base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
ENCRYPTION_MASTER_KEY=

# =============================================================================
# Docker Production Settings
# =============================================================================
POSTGRES_PASSWORD=changeme
